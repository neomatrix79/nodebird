{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules/*"],
  "include": ["**/*"]
}
